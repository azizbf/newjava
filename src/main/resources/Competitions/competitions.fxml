<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.competitions.CompetitionsController"
      spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Competitions" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TableView fx:id="competitionsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Competition Name"/>
            <TableColumn fx:id="dateColumn" text="Date"/>
            <TableColumn fx:id="statusColumn" text="Status"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="addButton" text="Add Competition" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="editButton" text="Edit" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button fx:id="deleteButton" text="Delete" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox> 