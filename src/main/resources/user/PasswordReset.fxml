<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom right, #1a2a6c, #4286f4);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.login.PasswordResetController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="200.0" prefWidth="300.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12;">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>
                <Label text="Reset Password" textFill="#1a2a6c">
                    <font>
                        <Font name="Segoe UI Bold" size="22.0" />
                    </font>
                </Label>

                <Label text="Enter your email address and we'll send you your password." textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>

                <TextField fx:id="emailField" promptText="Email Address" style="-fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>

                <Label fx:id="messageLabel" textFill="RED" visible="false" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>

                <Button defaultButton="true" onAction="#handleResetPassword" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #1a2a6c; -fx-text-fill: white; -fx-background-radius: 5;" text="Send Password">
                    <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane> 